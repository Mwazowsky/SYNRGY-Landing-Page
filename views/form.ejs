                    </li>
                </ul>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <!--Main Navigation-->

    <!--Main layout-->
    <main style="margin-top: 58px;">
        <div class="container-fluid col">
            <div class="row breadcrumb">
                <span>Breadcrumb</span>
            </div>
            <div class="row title">
                <span>Judul</span>
            </div>
            <div class="row filter">
                <span>filter</span>
            </div>
        </div>

        <div class="container pt-4 py-5">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <form id="form-upload" class="px-4 mt-4">
                        <div class="row">
                            <label for="nama" class="col-2 form-label my-2">Nama</label>
                            <input type="text" class="col form-control my-2" id="input-nama" name="nama" required>
                        </div>
                        <div class="row">
                            <label for="rate" class="col-2 form-label my-2">Sewa /hari</label>
                            <input type="number" class="col form-control my-2" id="input-rate" name="rate" required>
                        </div>
                        <div class="row">
                            <label for="ukuran" class="col-2 form-label my-2">Ukuran</label>
                            <input type="number" class="col form-control my-2" id="input-ukuran" name="ukuran" required>
                        </div>
                        <div class="row mb-3">
                            <label for="input-file" class="col-2 form-label">Upload Gambar</label>
                            <input type="file" name="file" class="col form-control" id="input-file" />
                            <div id="new-preview"></div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" id="button-submit" class="btn btn-dark w-100 fw-bold">Add</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!--Main layout-->

    <script src="/scripts/upload.js"></script>
</body>

</html>